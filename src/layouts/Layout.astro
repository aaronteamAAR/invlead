---
export interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&family=Roboto:ital,wght@0,300;0,400;0,700;1,700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<style is:global>

			html{
				scroll-behavior: smooth;
			}
			*{
				/* background-color: #FFF5E1; */
				font-family: 'Roboto', sans-serif;
		
			}
		</style>
	</body>
	<script>
		import AOS from 'aos'
		import "aos/dist/aos.css"
		
		AOS.init()
	</script>
</html>

