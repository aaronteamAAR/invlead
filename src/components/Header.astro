---
import Layout from "../layouts/Layout.astro";
import '../styles/header.css'
---


<Layout>
<main>
    <div class='body mt-12'>
        <div>
            <section data-aos="fade-up"
            data-aos-delay="600"
            data-aos-duration="1300"
            class="px-[3em] md:px-[6em]">
                <h2 class="header flex flex-col justify-start ">
                  <span class="text-1 font-serif font-bold">Less overpaying.</span>
                  <span class="text-2 font-serif font-bold">Shop more.</span>  
                  <span class="text-3 text-3xl mt-4 w-96 font-sans">
                    Shop from your favourite brands here with us,
                    amazing amazon products, redbubble apparels etc.
                  </span>
                </h2>
            </section>

        </div>
    </div>
</main>
</Layout>
<style>
   
    .text-1, .text-3{
        color: #fffef0;
    }

    .text-1, .text-2{
        font-size: 80px;
        line-height: 5.5rem;
    }
    .text-3{
        
    }
    .text-2{
        color: #ffac7f;
    }

@media screen and (max-width:600px){
    .text-1, .text-2{
        width:100%;
        font-size:62px;
        line-height: 4.5rem;
    }

    .text-3{
     font-size:21px;   
    }
}
</style>